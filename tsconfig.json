{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2016",
        "lib": ["ES2016", "dom"],
        "outDir": "lib",
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "sourceMap": true,
        "jsx": "preserve",
        "noEmit": true,
        /* Additional Options */

        "skipLibCheck": true
    },
    "files": ["./src/index.ts"],
    "compileOnSave": false,
    "buildOnSave": false
}
